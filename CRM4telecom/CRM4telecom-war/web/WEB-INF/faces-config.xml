<faces-config xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"              
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
       http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" version="2.0">
    <managed-bean>
        <managed-bean-name>customerBean</managed-bean-name>
        <managed-bean-class>com.crm4telecom.web.beans.CustomerBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>orderBean</managed-bean-name>
        <managed-bean-class>com.crm4telecom.web.beans.OrderBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>customerValidationBean</managed-bean-name>
        <managed-bean-class>com.crm4telecom.web.beans.CustomerValidationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>searchBean</managed-bean-name>
        <managed-bean-class>com.crm4telecom.web.beans.SearchBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>